{
  "name": "pickup-root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently -n \"SHARED,SERVER,CLIENT\" -c \"yellow,blue,magenta\" \"npm run dev --workspace=@pickup/shared\" \"npm run dev --prefix server\" \"npm run dev --prefix client\"",
    "install:all": "npm install && npm install --prefix server && npm install --prefix client",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "husky": "^9.1.7",
    "kill-port": "^2.0.1",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2"
  },
  "lint-staged": {
    "client/**/*.{ts,tsx}": [
      "npm run lint:staged --prefix client",
      "npm run test:staged --prefix client"
    ],
    "server/**/*.ts": [
      "npm run lint:staged --prefix server",
      "npm run test:staged --prefix server"
    ],
    "packages/shared/**/*.ts": [
      "bash -c \"npm run build --workspace=@pickup/shared\""
    ]
  }
}